<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">


    </ProgressBar>


    <RelativeLayout
        android:id="@+id/rl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <RelativeLayout
                android:id="@+id/rl_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/padding_large"
                    app:cardCornerRadius="@dimen/padding_x_small">

                    <EditText
                        android:id="@+id/et_get_city_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:drawableStart="@drawable/ic_search"
                        android:drawablePadding="@dimen/padding_large"
                        android:drawableTint="@color/black"
                        android:hint="@string/search_places"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingStart="@dimen/padding_large"
                        android:paddingEnd="@dimen/padding_large"
                        android:textColor="@color/black" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rl_sub_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cv_toolbar">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_weather_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_500"
                    android:scaleType="centerCrop">


                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_x_large"
                    android:layout_marginEnd="@dimen/padding_x_large"
                    android:layout_marginTop="@dimen/padding_large"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_date_and_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/demo_data"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_large"
                        android:textStyle="bold">


                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_day_max_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/day"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large">


                        </TextView>


                        <TextView
                            android:id="@+id/tv_day_min_temp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/day"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large">


                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_temp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/main_temp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_super_large">


                        </TextView>

                        <ImageView
                            android:id="@+id/iv_weather_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="@dimen/padding_large"
                            android:layout_marginEnd="@dimen/padding_large"
                            android:src="@drawable/ic_sunny">

                        </ImageView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_large"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_feels_like"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/feels_like"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large">


                        </TextView>


                        <TextView
                            android:id="@+id/tv_weather_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="@string/weather_type"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_large">


                        </TextView>


                    </LinearLayout>

                </LinearLayout>




















            </FrameLayout>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/padding_x_large"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="@dimen/padding_x_large"
                android:paddingBottom="@dimen/padding_x_large"
                android:elevation="@dimen/padding_small"
                app:cardCornerRadius="@dimen/padding_large"
                app:cardMaxElevation="@dimen/padding_x_small"
                app:cardElevation="@dimen/padding_x_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_main_bg_above"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/purple_500"
                        android:orientation="horizontal"
                        >
                        
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_pressure_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal">


                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tv_pressure"
                                    android:text="@string/default_numbers"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_x_large"
                                    >


                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/pressure"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    >


                                </TextView>


                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_humidity_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal">


                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tv_humidity"
                                    android:text="@string/default_numbers"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_x_large"
                                    >


                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/pressure"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    >


                                </TextView>


                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_wind_speed_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal">


                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tv_wind_speed"
                                    android:text="@string/default_numbers"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_x_large"
                                    >


                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/pressure"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    >


                                </TextView>


                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_main_bg_below"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/purple_500"
                        android:orientation="horizontal"
                        >

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_sunrise_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal">


                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tv_sunrise"
                                    android:text="@string/default_numbers"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_x_large"
                                    >


                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/pressure"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    >


                                </TextView>


                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_sunset_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal">


                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tv_sunset"
                                    android:text="@string/default_numbers"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_x_large"
                                    >


                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/pressure"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    >


                                </TextView>


                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/padding_x_small"
                            android:id="@+id/rl_temp_farenhite_wrapper">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:padding="@dimen/padding_x_small">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_horizontal">


                                </ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/tv_temp_farenhite"
                                    android:text="@string/default_numbers"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_x_large"
                                    >


                                </TextView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/pressure"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_med"
                                    >


                                </TextView>


                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>





            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>